{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "*.cpp",  // Ensure all your cpp files are included
        "-o",
        "${workspaceFolder}/tse-simulator-2",  // Output location for the executable
        "-std=c++20"
      ],
      "options": {
        "cwd": "${fileDirname}"  // Ensure you're in the correct working directory
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
